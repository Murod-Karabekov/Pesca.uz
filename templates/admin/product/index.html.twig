{% extends 'admin/base.html.twig' %}

{% block title %}Products{% endblock %}

{% block admin_body %}
<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
    <div>
        <h1 class="text-2xl md:text-3xl font-display font-bold text-brand-dark">Products</h1>
        <p class="text-brand-medium mt-1">Manage your product catalog</p>
    </div>
    <a href="{{ path('admin_product_new') }}" class="btn-primary text-sm">
        + Add Product
    </a>
</div>

{% if products|length > 0 %}
<div class="card overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-beige-50 border-b border-beige-200">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-brand-medium uppercase tracking-wider">Product</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-brand-medium uppercase tracking-wider">Price</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-brand-medium uppercase tracking-wider">Sizes</th>
                    <th class="px-6 py-4 text-left text-xs font-semibold text-brand-medium uppercase tracking-wider">Status</th>
                    <th class="px-6 py-4 text-right text-xs font-semibold text-brand-medium uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-beige-100">
                {% for product in products %}
                <tr class="hover:bg-beige-50/50 transition-colors">
                    <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-beige-100 rounded-lg overflow-hidden flex-shrink-0">
                                {% if product.image %}
                                    <img src="/uploads/products/{{ product.image }}" alt="{{ product.name }}" class="w-full h-full object-cover">
                                {% else %}
                                    <div class="w-full h-full flex items-center justify-center">
                                        <svg class="w-5 h-5 text-beige-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                                    </div>
                                {% endif %}
                            </div>
                            <span class="font-medium text-brand-dark text-sm">{{ product.name }}</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 text-sm font-display font-semibold text-brand-dark">{{ product.price|number_format(0, '.', ' ') }} UZS</td>
                    <td class="px-6 py-4">
                        <div class="flex flex-wrap gap-1">
                            {% for s in product.size %}
                                <span class="px-2 py-0.5 text-xs bg-beige-100 text-brand-medium rounded">{{ s }}</span>
                            {% endfor %}
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        {% if product.status %}
                            <span class="badge-active">Active</span>
                        {% else %}
                            <span class="badge-inactive">Inactive</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        <div class="flex items-center justify-end gap-2">
                            <a href="{{ path('admin_product_edit', {id: product.id}) }}"
                               class="p-2 text-brand-medium hover:text-peach-600 hover:bg-peach-50 rounded-lg transition-all" title="Edit">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                            </a>
                            <form method="post" action="{{ path('admin_product_toggle', {id: product.id}) }}" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle_product_' ~ product.id) }}">
                                <button type="submit" class="p-2 text-brand-medium hover:text-yellow-600 hover:bg-yellow-50 rounded-lg transition-all" title="{{ product.status ? 'Deactivate' : 'Activate' }}">
                                    {% if product.status %}
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/></svg>
                                    {% else %}
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                                    {% endif %}
                                </button>
                            </form>
                            <form method="post" action="{{ path('admin_product_delete', {id: product.id}) }}" class="inline" onsubmit="return confirm('Delete this product?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_product_' ~ product.id) }}">
                                <button type="submit" class="p-2 text-brand-medium hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" title="Delete">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% else %}
<div class="card p-12 text-center">
    <p class="text-brand-medium mb-4">No products yet.</p>
    <a href="{{ path('admin_product_new') }}" class="btn-primary">Add First Product</a>
</div>
{% endif %}
{% endblock %}
