{% extends 'base.html.twig' %}

{% block title %}Pesca — Premium tibbiy kiyimlar{% endblock %}

{% block body %}
{# ─── Hero Section ─── #}
<section class="relative bg-gradient-to-br from-peach-50 via-beige-50 to-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
        <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="space-y-8">
                <div class="inline-flex items-center gap-2 px-4 py-2 bg-peach-100 text-peach-700 rounded-full text-sm font-medium">
                    <span class="w-2 h-2 bg-peach-500 rounded-full animate-pulse"></span>
                    Premium tibbiy kiyimlar
                </div>
                <h1 class="text-4xl md:text-6xl font-display font-bold text-brand-dark leading-tight">
                    Nafosatning
                    <span class="text-peach-500">tibbiy</span>
                    mukammalligi
                </h1>
                <p class="text-lg text-brand-medium leading-relaxed max-w-lg">
                    Professional funksionallik va premium dizaynni birlashtirgan tibbiy kiyimlar kolleksiyamizni kashf eting.
                </p>
                <div class="flex flex-wrap gap-4">
                    <a href="{{ path('app_product_index') }}" class="btn-primary text-base px-8 py-4">
                        Kolleksiyani ko'rish
                    </a>
                    <a href="{{ path('app_tailor_index') }}" class="btn-secondary text-base px-8 py-4">
                        Premium xizmat
                    </a>
                </div>
            </div>
            <div class="relative hidden md:block">
                {# Hero image with red decorative frame #}
                <div class="relative">
                    <div class="absolute -inset-3 border-4 border-red-500 rounded-3xl"></div>
                    <div class="absolute -inset-1 bg-gradient-to-tr from-red-500/20 to-peach-300/20 rounded-2xl"></div>
                    <img
                        src="https://i.pinimg.com/736x/a3/ba/c4/a3bac43a316182eef063e94919008b34.jpg"
                        alt="Pesca premium tibbiy kiyimlaridagi tibbiyot mutaxassisi"
                        class="relative w-full h-[28rem] object-cover rounded-2xl shadow-2xl"
                    >
                    {# Decorative corner accents #}
                    <div class="absolute -top-5 -right-5 w-10 h-10 border-t-4 border-r-4 border-red-500 rounded-tr-xl"></div>
                    <div class="absolute -bottom-5 -left-5 w-10 h-10 border-b-4 border-l-4 border-red-500 rounded-bl-xl"></div>
                </div>
                <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-peach-300 rounded-2xl opacity-60 -z-10"></div>
                <div class="absolute -top-6 -right-6 w-24 h-24 bg-beige-300 rounded-full opacity-40 -z-10"></div>
            </div>
        </div>
    </div>
</section>

{# ─── Features Section ─── #}
<section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center p-8 rounded-2xl bg-beige-50 hover:bg-beige-100 transition-colors duration-300">
                <div class="w-16 h-16 mx-auto mb-6 bg-peach-100 rounded-2xl flex items-center justify-center">
                    <svg class="w-8 h-8 text-peach-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-display font-semibold mb-3">Premium sifat</h3>
                <p class="text-brand-medium text-sm leading-relaxed">Ish kuningiz davomida uzoq muddatli qulaylik uchun eng yaxshi materiallardan tayyorlangan.</p>
            </div>
            <div class="text-center p-8 rounded-2xl bg-beige-50 hover:bg-beige-100 transition-colors duration-300">
                <div class="w-16 h-16 mx-auto mb-6 bg-peach-100 rounded-2xl flex items-center justify-center">
                    <svg class="w-8 h-8 text-peach-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-display font-semibold mb-3">G'amxo'rlik bilan yaratilgan</h3>
                <p class="text-brand-medium text-sm leading-relaxed">Har bir tikuv muhim. Dizaynlarimiz estetik va funksionallikni birinchi o'ringa qo'yadi.</p>
            </div>
            <div class="text-center p-8 rounded-2xl bg-beige-50 hover:bg-beige-100 transition-colors duration-300">
                <div class="w-16 h-16 mx-auto mb-6 bg-peach-100 rounded-2xl flex items-center justify-center">
                    <svg class="w-8 h-8 text-peach-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                </div>
                <h3 class="text-lg font-display font-semibold mb-3">Professional standart</h3>
                <p class="text-brand-medium text-sm leading-relaxed">Tibbiyot mutaxassislari uchun eng yuqori sanoat standartlariga javob beradi.</p>
            </div>
        </div>
    </div>
</section>

{# ─── Featured Products ─── #}
{% if featured_products|length > 0 %}
<section class="py-16 md:py-24 bg-beige-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-display font-bold text-brand-dark mb-4">Tanlangan kolleksiya</h2>
            <p class="text-brand-medium max-w-2xl mx-auto">Butun dunyo bo'ylab mutaxassislar tomonidan tanlangan eng mashhur tibbiy kiyimlarimiz.</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for product in featured_products %}
            <a href="{{ path('app_product_show', {id: product.id}) }}" class="card group">
                <div class="aspect-[3/4] bg-beige-100 relative overflow-hidden">
                    {% if product.image %}
                        <img src="/uploads/products/{{ product.image }}" alt="{{ product.name }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500">
                    {% else %}
                        <div class="w-full h-full flex items-center justify-center">
                            <svg class="w-16 h-16 text-beige-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                    {% endif %}
                </div>
                <div class="p-5">
                    <h3 class="font-semibold text-brand-dark mb-1 group-hover:text-peach-600 transition-colors">{{ product.name }}</h3>
                    <p class="text-peach-600 font-display font-bold text-lg">{{ product.price|number_format(0, '.', ' ') }} so'm</p>
                    <div class="flex flex-wrap gap-1 mt-3">
                        {% for s in product.size %}
                            <span class="px-2 py-0.5 text-xs bg-beige-100 text-brand-medium rounded-md">{{ s }}</span>
                        {% endfor %}
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
        <div class="text-center mt-10">
            <a href="{{ path('app_product_index') }}" class="btn-secondary">Barcha kolleksiyani ko'rish →</a>
        </div>
    </div>
</section>
{% endif %}

{# ─── Tailors Section ─── #}
{% if tailors|length > 0 %}
<section class="py-16 md:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-display font-bold text-brand-dark mb-4">Premium tikuvchilik xizmati</h2>
            <p class="text-brand-medium max-w-2xl mx-auto">Maxsus tibbiy kiyim tajribasi uchun mutaxassis tikuvchilarimiz bilan ishlang.</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for tailor in tailors %}
            <div class="card p-6 text-center">
                <div class="w-24 h-24 mx-auto mb-4 rounded-full bg-beige-100 overflow-hidden">
                    {% if tailor.image %}
                        <img src="/uploads/tailors/{{ tailor.image }}" alt="{{ tailor.name }}" class="w-full h-full object-cover">
                    {% else %}
                        <div class="w-full h-full flex items-center justify-center">
                            <svg class="w-10 h-10 text-beige-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                    {% endif %}
                </div>
                <h3 class="font-display font-semibold text-lg text-brand-dark mb-2">{{ tailor.name }}</h3>
                {% if tailor.description %}
                    <p class="text-brand-medium text-sm mb-4 line-clamp-3">{{ tailor.description }}</p>
                {% endif %}
                {% if tailor.price %}
                    <p class="text-peach-600 font-bold font-display mb-4">{{ tailor.price|number_format(0, '.', ' ') }} so'mdan</p>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        <div class="text-center mt-10">
            <a href="{{ path('app_tailor_index') }}" class="btn-primary">Premium xizmatni ko'rish →</a>
        </div>
    </div>
</section>
{% endif %}
{% endblock %}
