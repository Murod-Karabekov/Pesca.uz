{% extends 'base.html.twig' %}

{% block title %}Premium tikuvchilik xizmati — Pesca{% endblock %}

{% block body %}
<section class="py-12 md:py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        {# ─── Header ─── #}
        <div class="text-center mb-12">
            <div class="inline-flex items-center gap-2 px-4 py-2 bg-peach-100 text-peach-700 rounded-full text-sm font-medium mb-4">
                <span class="w-2 h-2 bg-peach-500 rounded-full"></span>
                Premium xizmat
            </div>
            <h1 class="text-3xl md:text-4xl font-display font-bold text-brand-dark mb-4">Mutaxassis tikuvchilarimiz</h1>
            <p class="text-brand-medium max-w-2xl mx-auto">Aniq xususiyatlaringizga moslashtirilgan maxsus tibbiy kiyimlar uchun malakali tikuvchilarimiz bilan ishlang.</p>
        </div>

        {# ─── Tailors Grid ─── #}
        {% if tailors|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for tailor in tailors %}
            <div class="card p-8 text-center hover:shadow-lg transition-shadow duration-300">
                {# Profile Image #}
                <div class="w-28 h-28 mx-auto mb-6 rounded-full bg-beige-100 overflow-hidden ring-4 ring-beige-200">
                    {% if tailor.imageSrc %}
                        <img src="{{ tailor.imageSrc }}" alt="{{ tailor.name }}" class="w-full h-full object-cover">
                    {% else %}
                        <div class="w-full h-full flex items-center justify-center">
                            <svg class="w-12 h-12 text-beige-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                    {% endif %}
                </div>

                <h3 class="text-xl font-display font-semibold text-brand-dark mb-3">{{ tailor.name }}</h3>

                {% if tailor.description %}
                    <p class="text-brand-medium text-sm leading-relaxed mb-4">{{ tailor.description }}</p>
                {% endif %}

                {% if tailor.price %}
                    <p class="text-peach-600 font-display font-bold text-lg mb-6">{{ tailor.price|number_format(0, '.', ' ') }} so'mdan</p>
                {% endif %}

                {# Book Button #}
                {% if app.user %}
                <form method="post" action="{{ path('app_tailor_book', {id: tailor.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('tailor_book_' ~ tailor.id) }}">
                    <button type="submit" class="btn-primary w-full">
                        Buyurtma berish
                    </button>
                </form>
                {% else %}
                <a href="{{ path('app_login') }}" class="btn-primary w-full inline-block text-center">
                    Buyurtma uchun kiring
                </a>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="text-center py-20">
            <svg class="w-16 h-16 mx-auto text-beige-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <h3 class="text-lg font-display font-semibold text-brand-dark mb-2">Hozircha tikuvchilar mavjud emas</h3>
            <p class="text-brand-medium">Keyinroq tekshirib ko'ring.</p>
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}
